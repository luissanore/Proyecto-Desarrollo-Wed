<h3>Nuevo Producto</h3>

<%= form_for :post, :url => { :action => :newProduct} do |f| %>
	<div class="form-group row">
		<%= f.label :title, "Titulo de Articulo" %>
		<%= f.text_field :title, :class => "form-control" %>
	</div>
	<div class="form-group row">
		<%= f.label :text, "Contenido de Articulo" %>
		<%= f.text_area :text, :class => "form-control" %>
	</div>
	<div class="form-group row">
		<%= f.submit  "Contenido de Articulo", :class => "btn btn-primary" %>
		
	</div>
<% end %>	
<%= link_to "Retroceder", :action => :index%>